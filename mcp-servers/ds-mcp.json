{
  "mcpServers": {
    "bigquery": {
      "type": "http",
      "url": "https://bigquery.googleapis.com/mcp",
      "description": "BigQuery MCP server (Google Cloud)"
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${GITHUB_MCP_PAT}"
      },
      "description": "GitHub MCP (requires GITHUB_MCP_PAT)"
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "description": "Browser automation with Playwright MCP"
    },
    "notion": {
      "type": "http",
      "url": "https://mcp.notion.com/mcp",
      "description": "Notion MCP (official hosted server)"
    },
    "supabase": {
      "type": "http",
      "url": "https://mcp.supabase.com/mcp",
      "description": "Supabase (Postgres + auth) for data access"
    },
    "greptile": {
      "type": "http",
      "url": "https://api.greptile.com/mcp",
      "headers": {
        "Authorization": "Bearer ${GREPTILE_API_KEY}"
      },
      "description": "Code intelligence/search (requires GREPTILE_API_KEY)"
    },
    "linear": {
      "type": "http",
      "url": "https://mcp.linear.app/mcp",
      "description": "Linear issue tracking for DS projects"
    }
  }
}

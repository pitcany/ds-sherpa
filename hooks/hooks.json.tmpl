{
  "description": "DS safety + quality automation",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 __PLUGIN_DIR__/scripts/guard_bash.py",
            "timeout": 10,
            "env": {
              "DS_SHERPA_EXFIL_ALLOWLIST": "__EXFIL_ALLOWLIST__",
              "DS_SHERPA_EXFIL_ALLOWLIST_FILE": "$HOME/.claude/exfil_allowlist"
            }
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "__PLUGIN_DIR__/scripts/format_after_edit.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "__PLUGIN_DIR__/scripts/lint_after_edit.sh",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
